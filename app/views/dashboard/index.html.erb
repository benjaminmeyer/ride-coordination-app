<% @page_title = "Dashboard" %>

<div>
	<div class="row">
		<div class="col-md-6">
			<h2>My Upcoming Events</h2>
			<div class="list-group">
				<% @events.each do |event| %>
					<a href="/events/view/<%= event.id %>" class="list-group-item">
						<%= event.name %></a>
				<% end %>
