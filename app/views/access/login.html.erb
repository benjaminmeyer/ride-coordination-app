<% @page_title = "Login" %>

<div>
	<%= form_tag(:action => 'attempt_login') do %>
		<p>Username</p>
		<%= text_field_tag(:email) %>
		<br><br>
		<p>Password</p>
		<%= password_field_tag(:password) %>
		<br><br>
		<%= submit_tag("Log In") %>
	<% end %>
	<br>
	<a href="/access/create"><button type="button" class="btn btn-default">Create Account</button></a>
</div>