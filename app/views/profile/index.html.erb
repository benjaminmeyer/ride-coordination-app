<% @page_title = "Profile" %>

<div>
	<h1 class="page-header">Profile for <%= @user.first_name%> <%= @user.last_name%></h1>
	
	<h2>My Car</h2>
	<form method="POST" action="/profile/updatecar">
		<%= token_tag %>
		<div class="form-group">
			<label>Number of Passengers</label>
			<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Number of Passengers" name="passengers" value="<%= @user.car_passengers %>">
			<p class="help-block">Number of passengers your car can hold, not including yourself. Input "0" if you do not have a car.</p>
		</div>
		<button type="submit" class="btn btn-default">Update Car</button>
	</form>
	
	
	
</div>

